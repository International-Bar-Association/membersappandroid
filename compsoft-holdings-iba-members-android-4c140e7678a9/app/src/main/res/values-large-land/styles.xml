<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/BrandButtonStyle</item>
        <item name="android:textColorHint">@color/defaultTextColorHint</item>
        <item name="colorControlNormal">@color/defaultTextControlNormal</item>
        <item name="android:editTextColor">@color/darkTextColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/login_bg_tablet</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:colorControlHighlight">@color/lightTextControlHighlight</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="ProfileHeaderTextView">
        <item name="android:textColor">@color/profileHeaderText</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ProfileLinkTextView">
        <item name="android:textColor">@color/profileLinkText</item>
    </style>

    <style name="SearchFilterEditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:inputType">textCapWords|textNoSuggestions</item>
    </style>

    <style name="DataPickerSearchEdit">
        <item name="android:background">@drawable/white_background_edit_text</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
