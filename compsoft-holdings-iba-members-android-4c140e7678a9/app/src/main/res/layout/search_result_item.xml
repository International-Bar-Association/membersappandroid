<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@android:color/white"
                                             android:foreground="?attr/selectableItemBackground"
                                             android:padding="@dimen/default_horizontal_margin">

    <ImageView
        android:id="@+id/conference_chat_item_image_view"
        android:layout_width="64dp"
        android:layout_height="96dp"
        android:contentDescription="@string/conference_search_image_view_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_image_placeholder_conference"/>

    <TextView
        android:id="@+id/conference_chat_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_content_padding"
        android:textSize="@dimen/conference_font_default"
        android:textStyle="bold"
        android:textColor="@color/content_detail_description_font"
        android:layout_marginStart="@dimen/default_horizontal_margin"
        app:layout_constraintStart_toEndOf="@+id/conference_chat_item_image_view"
        app:layout_constraintTop_toTopOf="@+id/conference_chat_item_image_view"/>

    <TextView
        android:id="@+id/conference_chat_item_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/conference_font_secondary"
        android:layout_marginStart="@dimen/default_horizontal_margin"
        app:layout_constraintStart_toEndOf="@+id/conference_chat_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/conference_chat_item_name"/>

</android.support.constraint.ConstraintLayout>