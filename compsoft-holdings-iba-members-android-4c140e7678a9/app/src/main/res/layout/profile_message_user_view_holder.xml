<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/activity_content_padding"
                android:paddingLeft="80dp"
                android:paddingTop="@dimen/activity_content_padding">

    <TextView
        android:id="@+id/message_day_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_small_content_padding"
        android:layout_marginBottom="@dimen/activity_content_padding"
        android:textSize="12dp"/>

    <LinearLayout
        android:id="@id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message_day_header"
        android:orientation="vertical"
        android:background="@drawable/profile_message_user_rounded_border_conference">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_medium_content_padding"
            android:paddingRight="@dimen/activity_medium_content_padding"
            android:paddingTop="@dimen/activity_medium_content_padding"
            android:textColor="@android:color/white"
            android:text="sdfsdfsdfsdfsdf"/>

        <TextView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingBottom="@dimen/activity_medium_content_padding"
            android:paddingLeft="@dimen/activity_medium_content_padding"
            android:paddingRight="@dimen/activity_medium_content_padding"
            android:textColor="@color/profile_message_text_date"
            android:textSize="10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/message_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sending..."
        android:textSize="12sp"
        android:textColor="@color/message_item_status_sending"
        android:layout_below="@+id/message_layout"
        android:layout_alignEnd="@+id/message_layout"
        android:visibility="gone"/>


</RelativeLayout>
